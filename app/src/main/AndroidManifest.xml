<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.gmathi.novellibrary">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".NovelLibraryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".service.SyncNovelUpdateReceiver"
            android:exported="false">
        </receiver>

        <service
            android:name=".service.BackgroundNovelSyncTask"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.DownloadNovelService"
            android:enabled="true"
            android:exported="false">
        </service>
        <service
            android:name=".service.DownloadChapterService"
            android:enabled="true"
            android:exported="false">
        </service>
        <service
            android:name=".service.SyncNovelsService"
            android:enabled="true"
            android:exported="false">
        </service>

        <activity
            android:name=".activity.NovelDetailsActivity"
            android:label="@string/title_activity_novel_details"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ImagePreviewActivity"
            android:label=""
            android:theme="@style/AppImagePreview"/>
        <activity
            android:name=".activity.ReaderPagerActivity"
            android:label="@string/title_activity_reader_pager"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ReaderPagerDBActivity"
            android:label="@string/title_activity_reader_pager"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:launchMode="singleTask"
            android:theme="@style/DarkTheme_DarkSide">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChaptersActivity"
            android:label="@string/title_activity_chapters"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ChaptersActivity"
            android:label="@string/title_activity_chapters"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.MetaDataActivity"
            android:label="@string/title_activity_meta_data"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.LibrariesUsedActivity"
            android:label="@string/title_activity_libraries_used"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ContributionsActivity"
            android:label="@string/title_activity_contributions"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.CopyrightActivity"
            android:label="@string/title_activity_copyright"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.SearchUrlActivity"
            android:label="@string/title_activity_search_results"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.GeneralSettingsActivity"
            android:label="@string/title_activity_general_settings"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ReaderSettingsActivity"
            android:label="@string/title_activity_reader_settings"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.MentionSettingsActivity"
            android:label="@string/title_activity_mention_settings"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ChaptersNewActivity"
            android:label="@string/title_activity_chapters_new"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.LanguageActivity"
            android:label="@string/title_activity_language"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.NovelDownloadsActivity"
            android:label="@string/title_activity_novel_downloads"
            android:theme="@style/DarkTheme_DarkSide">
        </activity>
        <activity
            android:name=".activity.ImportLibraryActivity"
            android:label="@string/title_activity_import_library"
            android:parentActivityName=".activity.NavDrawerActivity"
            android:theme="@style/DarkTheme_DarkSide">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.gmathi.novellibrary.activity.NavDrawerActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="novelupdates.com"
                    android:pathPrefix="/readlist/"
                    android:scheme="http"/>
                <data
                    android:host="www.novelupdates.com"
                    android:pathPrefix="/readlist/"
                    android:scheme="http"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            
        </activity>
    </application>

</manifest>