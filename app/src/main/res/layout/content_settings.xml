<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:name="com.mgn.bingenovelreader.fragment.GeneralPreferenceFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:padding="@dimen/default_margin">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/clearCacheButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minWidth="100dp"
            android:padding="5dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@color/black_transparent"
            fancy:fb_focusColor="@color/ripple_color"
            fancy:fb_text="@string/clear"/>

        <TextView
            android:id="@+id/clearCacheTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/clearCacheButton"
            android:layout_toStartOf="@id/clearCacheButton"
            android:text="@string/clear_data"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/clearCacheDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/clearCacheTitle"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/clearCacheButton"
            android:layout_toStartOf="@id/clearCacheButton"
            android:text="@string/clear_data_description"
            android:textSize="14sp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/SlateGray"/>

</LinearLayout>