<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <ImageView
        android:id="@+id/novelDetailsIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:src="@drawable/ic_bookmark_black_vector"
        tools:tint="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/novelDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/novelDetailsIcon"
        android:layout_toStartOf="@id/novelDetailsIcon"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textIsSelectable="false"
        android:textSize="16sp"
        tools:text="Dummy Random Text"/>

    <View
        android:id="@+id/novelDetailsOverlay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.1"
        android:background="@android:color/black"/>


</RelativeLayout>